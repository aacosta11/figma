{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "outDir": "./dist",
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "paths": {
      "../*": ["./src/*"] 
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
